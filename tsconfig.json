{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,

    /* Bundler mode */
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Building */
    "outDir": "./dist"
  },
  "include": ["src"]
}
